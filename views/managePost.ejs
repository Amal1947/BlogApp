<div class="container">
    <% if (typeof res !== 'undefined' && res.length > 0) { %>
        <% res.forEach((blogPost) => { %>
            <div class="blog-card">
                <div class="card-body">
                    <div class="postName">Posted by <%= blogPost.name %></div>
                    <h5 class="card-title blog-title topicc"><%= blogPost.topic %></h5>
                    
                    <!-- Blog Post Status -->
                    <% if (blogPost.approve === 1) { %>
                        <div class="alert alert-success" role="alert">
                            Status: <span class="badge badge-success">Approved</span>
                        </div>
                    <% } else if (blogPost.approve === -1) { %>
                        <div class="alert alert-danger" role="alert">
                            Status: <span class="badge badge-danger">Declined</span>
                        </div>
                    <% } else { %>
                        <div class="alert alert-warning" role="alert">
                            Status: <span class="badge badge-warning">Pending</span>
                        </div>
                    <% } %>

                    <div class="postDate">Posted on: <%= blogPost.date %></div>
                    <div class="card-text blog-content discription">
                        <%= blogPost.articleDiscription %>
                    </div>
                    <div class="like-comment">
                        <!-- Edit button with link -->
                        <a href="/user/editPost/<%= blogPost._id %>" class="btn btn-success like-comment-btn text-white">Edit</a>
                        <!-- Delete button with link -->
                        <a href="/user/deletePost/<%= blogPost._id %>" class="btn btn-danger like-comment-btn text-white">Delete</a>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div><%= res.message %></div>
    <% } %>
</div>


    



