<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attractive Navbar with Blog Cards</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Add Font Awesome link for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Custom styles for the navbar */
        body {
            margin: 0; /* Remove default body margin */
        }

        .navbar {
            background-color: #007bff;
            position: fixed; /* Fix the navbar at the top */
            top: 0;
            left: 0;
            right: 0;
            z-index: 9999; /* Add a high z-index to ensure the navbar stays on top of other elements */
        }

        .navbar-brand {
            color: #fff;
            font-size: 24px;
            font-weight: bold;
        }

        .navbar-nav .nav-link {
            color: #fff;
            font-size: 18px;
            margin-right: 10px;
        }

        .navbar-nav .nav-link:hover {
            color: #fff;
        }

        .navbar-toggler {
            border-color: #fff;
        }

        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml;charset=utf8,%3Csvg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg" width="32" height="32"%3E%3Cpath stroke="%23fff" stroke-miterlimit="10" stroke-width="2" d="M4 8h24M4 16h24M4 24h24"/%3E%3C/svg%3E');
        }

        .navbar-nav .btn-create-post {
            background-color: #fff;
            color: #007bff;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            transition: all 0.3s ease-in-out;
        }

        .navbar-nav .btn-create-post:hover {
            background-color: #007bff;
            color: #fff;
        }

        .blog-card {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 20px;
            min-height: 200px;
            display: flex;
            flex-direction: column;
            width: 100%;
        }

        .blog-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .blog-content {
            color: #555;
            line-height: 1.5;
            flex-grow: 1;
            overflow: hidden;
        }

        .blog-content.full-content {
            overflow: visible;
        }

        .read-more {
            text-align: right;
        }

        /* Make the "Read More" link look like a button */
        .read-more-btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        .read-more-btn:hover {
            background-color: #0056b3;
        }

        /* Like and Comment section */
        .like-comment {
            display: inline-flex;
            margin-top: 15px;
        }

        .like-comment-btn {
            color: #555;
            cursor: pointer;
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <!-- Brand/logo -->
            <a class="navbar-brand" href="#">BlogApp</a>

            <!-- Navbar items -->
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/user/createpost">Create Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/managepost">Manage Post</a>
                </li>
                <li class="nav-item">
                    <button class="btn btn-create-post">View Posts</button>
                </li>
            </ul>

            <!-- Logout button -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link logout-link" href="/user/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" style="padding-top: 70px;">
        <% if (typeof res !== 'undefined' && res.length > 0) { %>
            <% res.forEach((blogPost) => { %>
            <!-- Blog Card -->
            <div class="blog-card">
                <div class="card-body">
                    <div class="postName">Posted by <%= blogPost.name %></div>
                    <h5 class="card-title blog-title topicc"><%= blogPost.title %></h5>
                    <div class="postDate">Posted on: <%= blogPost.date %></div>
                    <div class="card-text blog-content discription">
                        <%= blogPost.articleDiscription %>
                    </div>
                    <div class="read-more">
                        <a href="/user/readmoreUser/<%= blogPost._id %>"><button class="read-more-btn">Read More</button></a>
                    </div>
                    <!-- <div class="like-comment">
                        <button class="like-comment-btn"><i class="far fa-thumbs-up"></i> Like</button>
                        <button class="like-comment-btn"><i class="far fa-comment"></i> Comment</button>
                    </div> -->
                </div>
            </div>
            <% }); %>
        <% } else { %>
            <div><%= man.message %></div>
        <% } %>
    </div>

    <!-- Add Bootstrap JS script -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Add Font Awesome JS script -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>

</html>
